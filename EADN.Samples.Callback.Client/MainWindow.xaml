<Window x:Class="EADN.Samples.Callback.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EADN.Samples.Callback.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450">
    <Grid>
        <TextBlock Text="{Binding CurrentTime, FallbackValue='00:00:00'}" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="80">
        </TextBlock>
    </Grid>
</Window>
